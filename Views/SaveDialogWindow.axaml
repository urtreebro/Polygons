<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="150"
        Width="300"
        Height="150"
        WindowStartupLocation="CenterOwner"
        x:Class="Polygons.Views.SaveDialogWindow"
        Title="SaveDialogWindow">
    <StackPanel>
        <TextBlock HorizontalAlignment="Center" Margin="20">Save changes?</TextBlock>
        <WrapPanel HorizontalAlignment="Center">
            <Button Click="Button_Yes" Margin="10" >Yes</Button>
            <Button Click="Button_No" Margin="10">No</Button>
            <Button Click="Button_Cancel" Margin="10">Cancel</Button>
        </WrapPanel>

    </StackPanel>
</Window>